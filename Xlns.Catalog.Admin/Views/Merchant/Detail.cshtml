@model Xlns.Catalog.Admin.Models.MerchantDetail

@{
    ViewBag.Title = "Detail";
    var merchant = Model.Merchant;
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Merchant: @merchant.Name</h2>
        <ol class="breadcrumb">
            <li>
                <a href="@Url.Action("Index", "Dashboard")">Home</a>
            </li>
            <li>
                <a href="@Url.Action("Index", "Merchant")">Merchants</a>
            </li>
            <li class="active">
                <strong>@merchant.Name</strong>
            </li>
        </ol>
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row m-t-xs">
        <div class="col-md-6">
            <div class="profile-image">
                <img src="@merchant.LogoUrl" class="m-b-md img-responsive" alt="logo">
            </div>
            <div class="profile-info">
                <div class="">
                    <div>
                        <h2 class="no-margins">@merchant.Name</h2>
                        <h4><a href="@merchant.Url" target="_blank">@merchant.Url</a>&nbsp;</h4>
                        <p>@merchant.Description&nbsp;</p>
                        <p>@merchant.Contact&nbsp;</p>
                        <p>
                            @Html.ActionLink("Edit", "Edit", new { id = merchant.Id }, new { @class = "btn btn-primary btn-xs" })

                            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-primary btn-xs" })
                        </p>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <table class="table small m-b-xs">
                <tbody>
                    <tr>
                        <td>
                            <strong>@Model.Stats.CataloguesNumber</strong> Catalogues
                        </td>
                        <td>
                            <strong>@Model.Stats.ProductsNumber</strong> Products
                        </td>

                    </tr>
                    <tr>
                        <td>
                            <strong>61</strong> Comments
                        </td>
                        <td>
                            <strong>54</strong> Articles
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <strong>154</strong> Tags
                        </td>
                        <td>
                            <strong>32</strong> Friends
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="col-md-3">
            <small>Sales in last 24h</small>
            <h2 class="no-margins">206 480</h2>
            <div id="sparkline1"></div>
        </div>

    </div>
</div>

@Html.Action("List", "Catalog", new { merchantId = merchant.Id })

