@model Xlns.Catalog.Document.Model.Merchant

<fieldset class="form-horizontal">
    @using (Html.BeginForm("Create", "Catalog", FormMethod.Post))
    {        
        @Html.Hidden("merchantId", Model.Id)
        <div class="col-sm-6">
            <div class="form-group">
                <label class="col-sm-2 control-label">Name:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" placeholder="Catalog name" name="Name">                    
                </div>
            </div>
            <div class="form-group">
                @Html.Action("Select", "Country")
            </div>                        
            <div class="form-group">
                <input class="btn btn-primary" type="submit" value="Create catalag" />
            </div>
        </div>
        
    }
</fieldset>


<script type="text/javascript">
    function fileSelected(elem) {
        $(elem).parent().parent().nextAll('input').val($(elem).val().match(/[^\/\\]+$/));
    };
</script>
