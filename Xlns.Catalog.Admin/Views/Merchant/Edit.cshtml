@using Xlns.Catalog.Document.Model;
@model Xlns.Catalog.Document.Model.Merchant
@{
    ViewBag.Title = "Merchant";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Merchant Edit</h2>
        <ol class="breadcrumb">
            <li>
                <a href="@Url.Action("Index", "Dashboard")">Home</a>
            </li>
            <li>
                <a href="@Url.Action("Index", "Merchant")">Merchant</a>                
            </li>
            <li class="active">
                <strong>@ViewBag.CurrentActionName</strong>
            </li>
        </ol>
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <form id="merchantCreation" role="form" action="@Url.Action("Save", "Merchant")" method="post">
            @Html.HiddenFor(model => model.Id)
            <fieldset class="form-horizontal">
                <div class="form-group">
                    <label class="col-sm-2 control-label">Name:</label>
                    <div class="col-sm-10">
                        @Html.TextBoxFor(model => model.Name, new { @class = "form-control", type = "text", placeholder = "Merchant name" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">Description</label>
                    <div class="col-sm-10">
                        @Html.TextBoxFor(model => model.Description, new { @class = "form-control", type = "text", placeholder = "A few words on the company" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">Contact:</label>
                    <div class="col-sm-10">
                        @Html.TextBoxFor(model => model.Contact, new { @class = "form-control", type = "text", placeholder = "Main contact" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">Address:</label>
                    <div class="col-sm-10">
                        @Html.TextBoxFor(model => model.Address, new { @class = "form-control", type = "text", placeholder = "Headquarter" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">Url:</label>
                    <div class="col-sm-10">
                        @Html.TextBoxFor(model => model.Url, new { @class = "form-control", type = "text", placeholder = "www.thiscompany.com" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">Logo Url:</label>
                    <div class="col-sm-10">
                        @Html.TextBoxFor(model => model.LogoUrl, new { @class = "form-control", type = "text", placeholder = "www.thiscompany.com/thelogo.jpg" })
                    </div>
                </div>
                <div class="form-group col-lg-2">
                    <button class="btn btn-sm btn-primary pull-right m-t-n-xs" type="submit"><strong>Save</strong></button>
                </div>
            </fieldset>

        </form>

    </div>

</div>
