@model Xlns.Catalog.Document.Model.Catalogue

<fieldset class="form-horizontal">
    @using (Html.BeginForm("UploadFile", "Catalog", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {        
        @Html.Hidden("catalogueId", Model.Id)
        <div class="col-sm-6">            
            <div class="form-group input-group m-b">
                <span class="input-group-btn">
                    <label title="Upload catalog file" for="catalogFile" class="btn btn-primary">
                        <input type="file" name="catalogFile" id="catalogFile" class="hide" onchange="fileSelected(this);">
                        Upload new catalog
                    </label>
                </span>
                <input type="text" class="form-control">
            </div>
            <div class="form-group">
                <input class="btn btn-primary" type="submit" value="submit" />
            </div>
        </div>
        
    }
</fieldset>


<script type="text/javascript">
    function fileSelected(elem) {
        $(elem).parent().parent().nextAll('input').val($(elem).val().match(/[^\/\\]+$/));
    };
</script>
