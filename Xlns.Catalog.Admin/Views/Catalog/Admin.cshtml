@model Xlns.Catalog.Admin.Models.CatalogAdministration

@{
    var catalog = Model.Catalogue;
    var merchant = Model.Merchant;
    ViewBag.Title = "Admin " + catalog.Name;
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Catalog Administration</h2>
        <ol class="breadcrumb">
            <li>
                <a href="@Url.Action("Index", "Home")">Home</a>
            </li>
            <li>
                <a href="@Url.Action("Index", "Merchant")">Merchants</a>
            </li>
            <li>
                <a href="@Url.Action("Detail", "Merchant", new { Id = @merchant.Id })">@merchant.Name</a>
            </li>
            <li class="active">
                <strong>Catalog: @catalog.Name</strong>
            </li>
        </ol>
    </div>
</div>
