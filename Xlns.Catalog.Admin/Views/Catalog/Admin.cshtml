                        <div class="col-lg-12">
                            <div class="m-b-md">
                                <a href="#" class="btn btn-primary pull-right">Run analysis</a>
                                <h2>@string.Format("{0} - Catalog: {1}", merchant.Name, catalog.Name)</h2>
                            </div>
                            <dl class="dl-horizontal">
                                <dt>Status:</dt>
                                <dd>@Html.Partial("CatalogStatus", catalog.Status) </dd>
                            </dl>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-5">
                            <dl class="dl-horizontal">
                                <dt>Merchant:</dt>
                                <dd><a href="@Url.Action("Detail", "Merchant", new { Id = @merchant.Id })">@merchant.Name</a></dd>
                                <dt>Country:</dt>
                                <dd>@catalog.CountryCode </dd>
                                <dt>Products:</dt>
                                <dd>@Model.ProductsNumber </dd>
                            </dl>
                        </div>
                        <div class="col-lg-7" id="cluster_info">
